<div class = "main-container">
  <h2>スケジュール新規作成</h2>

  <%= render "shared/error" %>

  <%= form_with model:@schedule do |f| %>

    <table>
      <tr>
        <th><%= f.label :title, "タイトル" %></th>
        <td><%= f.text_field :title %></td>
      </tr>

      <tr>
        <th><%= f.label :start_date, "開始日" %></th>
        <td><%= f.date_field :start_date %></td>
      </tr>

      <tr>
        <th><%= f.label :end_date, "終了日" %></th>
        <td><%= f.date_field :end_date %></td>
      </tr>

      <tr>
        <th><%= f.label :all_day, "終日" %></th>
        <td>
          <%= f.check_box :all_day %>
          終日の場合はチェックを入れます
        </td>

      <tr>
        <th><%= f.label :schedule_memo, "スケジュールメモ" %></th>
        <td><%= f.text_area :schedule_memo, class: "posts-content" %></td>
      </tr>
    </table>

    <div>
    <% #submit、引数（@schedule）が何も情報を持っていなければcreateアクション、何かしらの情報を持っているのであればupdateアクションに送信される %>
        <ul>
          <li><%= f.submit "スケジュールを新規登録する" %></li>
          <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
        </ul>
    </div>
  <% end %>

</div>

<footer>
  <%= render "shared/footer" %>
</footer>
